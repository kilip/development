<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="siap.command.generate_key" class="Paroki\Security\Command\GeneratePrivateKeyCommand">
            <tag name="console.command" command="siap:generate:key"/>
        </service>
        <service id="siap.security.user_serializer" class="Paroki\Security\Serializer\UserSerializer">
            <argument type="service" id="api_platform.serializer.normalizer.item"/>
            <tag name="serializer.normalizer"/>
        </service>
    </services>
</container>
